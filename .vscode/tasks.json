{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "vite dev",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^\\s*$",
					"file": 1,
					"line": 1,
					"column": 1,
					"message": 1
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^\\s*(vite|VITE) v",
					"endsPattern": "Local:.*http://localhost:[0-9]+/"
				}
			}
		}
	]
}